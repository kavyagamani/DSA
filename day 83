'''
class Node:
    def _init_(self, val):
        self.data = val
        self.right = None
        self.left = None
'''

class Solution:
    def getHeight(self,root, h):
        if root is None:
            return h - 1
        return max(self.getHeight(root.left, h + 1),self.getHeight(root.right, h + 1))
        
    def levelorder(root):
        queue = deque([root, 0])
        lastLevel = 0
        height = self.getHeight(root, 0)
        
        while queue:
            node, lvl = queue.popleft()
            
            if lvl > lastLevel:
                print()
                lastLevel = lvl
            
            if lvl > lastLevel:
                print()
                lastLevel = lvl
            if lvl > height:
                break
            
            print("N" if node.data == -1 else node.data, end ="")
            
            if node.data == -1:
                  continue
            
            if node.left is None:
                queue.append([Node(-1),lvl,+1])
            else:
                queue.append([node.left, lvl + 1])
            
            if node.right is None:
                queue.append([Node(-1), lvl + 1])
            else:
                queue.append([node.right,lvl + 1])
        
    def mirror(self, root):
        # code here
        if root is None:
            return 
        queue = deque([root])
        
        while queue:
            curr = queue.popleft()
            curr.left, curr.right = curr.right, curr.left
            
            if curr.left:
                queue.append(curr.left)
            if curr.right:
                queue.append(curr.right)
            
    
