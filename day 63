class Solution:
    def maxLen(self, arr):
        # code here
        mp = {}
        presum = 0
        res = 0
        
        for i in range(len(arr)):
            presum += -1 if arr[i] == 0 else 1
            
            if presum == 0:
                res = i+1
            
            if presum in mp:
                res = max(res, i- mp[presum])
            else:
                mp[presum] = i
            
        return res
